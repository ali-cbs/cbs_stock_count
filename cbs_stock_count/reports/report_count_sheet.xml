<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Count Sheet Report Action -->
    <record id="action_report_count_sheet" model="ir.actions.report">
        <field name="name">Count Sheet</field>
        <field name="model">stock.count.session</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">cbs_stock_count.report_count_sheet</field>
        <field name="report_file">cbs_stock_count.report_count_sheet</field>
        <field name="binding_model_id" ref="model_stock_count_session"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">"Count Sheet - %s" % (object.name)</field>
    </record>

    <!-- Count Sheet Report Template -->
    <template id="report_count_sheet">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <style>
                            .count-sheet-table tbody tr {
                                border-bottom: 2px solid #000 !important;
                            }
                            .count-sheet-table tbody tr td {
                                padding: 8px !important;
                            }
                        </style>

                        <h2>Stock Count Sheet</h2>

                        <!-- Header Information -->
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Session:</strong>
                                <span t-field="doc.name"/>
                                <br/>
                                <strong>Warehouse:</strong>
                                <span t-field="doc.warehouse_id.name"/>
                                <br/>
                                <strong>Location:</strong>
                                <span t-field="doc.location_id.complete_name"/>
                                <br/>
                                <strong>Count Date:</strong>
                                <span t-field="doc.count_effective_date"/>
                                <br/>
                            </div>
                            <div class="col-6">
                                <strong>Owner:</strong>
                                <span t-field="doc.user_id.name"/>
                                <br/>
                                <strong>Attendees:</strong>
                                <span t-foreach="doc.attendee_ids" t-as="attendee">
                                    <span t-field="attendee.name"/>
                                    <t t-if="not attendee_last">, </t>
                                </span>
                                <br/>
                                <strong>State:</strong>
                                <span t-field="doc.state"/>
                                <br/>
                            </div>
                        </div>

                        <!-- Count Lines Table -->
                        <table class="table table-sm table-bordered count-sheet-table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Location</th>
                                    <th>Lot/Serial</th>
                                    <th>Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.product_id.display_name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.location_id.complete_name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.lot_id.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.qty_counted"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- Summary -->
                        <div class="row mt32">
                            <div class="col-12">
                                <strong>Total Lines:</strong>
                                <span t-field="doc.line_count"/>
                                <br/>
                                <strong>Total Counted:</strong>
                                <span t-field="doc.qty_counted_total"/>
                                <br/>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
