<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Refuse Wizard - Form View -->
    <record id="view_stock_count_refuse_wizard_form" model="ir.ui.view">
        <field name="name">stock.count.refuse.wizard.form</field>
        <field name="model">stock.count.refuse.wizard</field>
        <field name="arch" type="xml">
            <form string="Reason">
                <group>
                    <field name="reason" placeholder="Please enter the reason..."/>
                    <field name="session_id" invisible="1"/>
                    <field name="action_type" invisible="1"/>
                </group>
                <footer>
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
