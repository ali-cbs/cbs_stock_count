<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Category KPI Inherited View -->
    <record id="view_category_form_kpi_inherit" model="ir.ui.view">
        <field name="name">product.category.form.kpi</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Stock KPI">
                    <field name="accepted_diff_kpi_percent"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
