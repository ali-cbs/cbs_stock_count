<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stock Count Line - Search View -->
    <record id="view_stock_count_line_search" model="ir.ui.view">
        <field name="name">stock.count.line.search</field>
        <field name="model">stock.count.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="session_id"/>
                <field name="product_id"/>
                <field name="location_id"/>
                <filter string="Draft Sessions"
                        name="draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter string="In Review Sessions"
                        name="review"
                        domain="[('state', '=', 'review')]"/>
                <filter string="Approved Sessions"
                        name="approval"
                        domain="[('state', '=', 'approval')]"/>
            </search>
        </field>
    </record>
    <!-- Stock Count Line - List View -->
    <record id="view_stock_count_line_list" model="ir.ui.view">
        <field name="name">stock.count.line.list</field>
        <field name="model">stock.count.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="session_id"/>
                <field name="state"/>
                <field name="product_id"/>
                <field name="barcode_scanned"/>
                <field name="location_id"/>
                <field name="qty_system"/>
                <field name="qty_counted"/>
                <field name="qty_difference"/>
                <field name="scanned_by"/>
                <field name="scanned_at"/>
                <field name="note"/>
            </list>
        </field>
    </record>
    <!-- Stock Count Line - Form View -->
    <record id="view_stock_count_line_form" model="ir.ui.view">
        <field name="name">stock.count.line.form</field>
        <field name="model">stock.count.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="session_id"/>
                            <field name="state" readonly="1"/>
                            <field name="product_id"/>
                            <field name="barcode_scanned"/>
                            <field name="uom_id" readonly="1"/>
                            <field name="qty_system"/>
                            <field name="qty_counted"/>
                            <field name="qty_difference" readonly="1"/>
                        </group>
                        <group>
                            <field name="location_id"/>
                            <field name="lot_id"/>
                            <field name="package_id"/>
                            <field name="scanned_by" readonly="1"/>
                            <field name="scanned_at" readonly="1"/>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Stock Count Line - Window Action -->
    <record id="action_stock_count_line" model="ir.actions.act_window">
        <field name="name">Count Lines</field>
        <field name="res_model">stock.count.line</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
